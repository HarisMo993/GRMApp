@model GRMApp.Models.ViewModels.ItemsDetailsVM

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Details</h2>
			<hr />
		</div>
		<div class="row g-3">
			<div class="col-4">
				<label asp-for="ItemDetails1.ItemId">Item List</label>
				<select asp-for="ItemDetails1.ItemId" asp-items="@Model.ItemList" class="form-select">
					<option disabled selected>--Select Item--</option>
				</select>
				<span asp-validation-for="ItemDetails1.ItemId" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Score1">Score</label>
				<input asp-for="Score1" class="form-control" />
				<span asp-validation-for="Score1" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label asp-for="Score2">Score</label>
				<input asp-for="Score2" class="form-control" />
				<span asp-validation-for="Score2" class="text-danger"></span>
			</div>
				<div class="col-4">
				<label asp-for="ItemDetails2.ItemId">Item List</label>
				<select asp-for="ItemDetails2.ItemId" asp-items="@Model.ItemList" class="form-select">
					<option disabled selected>--Select Item--</option>
				</select>
				<span asp-validation-for="ItemDetails2.ItemId" class="text-danger"></span>
			</div>

			<div class="col-12">
				<button type="submit" class="btn btn-primary" style="width:30%">Create</button>
				<a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:30%">
					Back to List
				</a>
			</div>
		</div>

	</div>
</form>