@model IEnumerable<GRMApp.Models.Item>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-area="Customer" asp-controller="Home" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Item
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Position
			</th>
            <th>
                Name
			</th>
                <th>
                    Score
                </th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="35%">
                    @obj.Position
				</td>
                <td width="30%">
                    @obj.Name
				</td>
                    <td width="35%">
                        @obj.Score
                    </td>
			</tr>
        }
    </tbody>

</table>
    <div class="col-12">
        <a asp-controller="ItemDetails" asp-action="Create" class="btn btn-secondary" style="width:30%">
            Item Detais
        </a>
    </div>
</div>